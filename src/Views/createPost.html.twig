{% extends "main.html.twig" %}

{% block title %}
    Create Post
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="post well well-sm">
                <form class="form-horizontal" action="/post/create" method="post">
                    <fieldset>
                        <legend class="text-center header">Create Post</legend>
                        {% if errors %}
                            <div class="form-group">
                                {% for error in errors %}
                                    <span class="col-md-4 col-md-offset-2 text-center" style='color: red'>{{ error }}</span><br>
                                {% endfor %}
                            </div>
                        {% endif %}
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center">Title</span>
                            <div class="col-md-8">
                                <input id="title" name="title" type="text" placeholder="Title" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <span class="col-md-1 col-md-offset-2 text-center">Content</span>
                            <div class="col-md-8">
                                <textarea class="form-control" id="content" name="content" placeholder="Enter your content here." rows="7"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <script src="{{ asset('js/editor.js') }}"></script>
{% endblock %}